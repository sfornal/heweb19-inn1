<!doctype html>
<html lang="en">
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{ title }}</title>
    </head>

    <body {%if (bodyClass) %}class="{{bodyClass}}"{%endif%}>

    {% if showcontrols %}
        <div class="controls-wrapper">
            <button id="previous" class="button previous-button">&larr; Previous Slide</button>
            <button id="toggle" class="button toggle-button">Start Slide Show</button>
            <button id="next" class="button next-button">Next Slide &rarr;</button>
        </div>
    {% endif %}

    <main class="slides-wrapper">
        {{ content | safe }}
    </main>
    {% set js %}
        {% include "js/core.js" %}
    {% endset %}
    <script>{{ js | jsmin | safe }}</script>

    </body>
</html>
